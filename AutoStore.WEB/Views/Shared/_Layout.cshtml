<!DOCTYPE html>
<html>
<head>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>AutoStore</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <header class="col-md-12 col-sm-12">
        <nav class="navbar navbar-default">
            <div class="container-fluid">
                <div class="navbar-header">
                    <a class="navbar-brand" href="#">Магазин Автозапчастей</a>
                </div>
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Домашняя страница", "Index", "Home")</li>
                    @if (User.IsInRole("admin"))
    {
                <li>@Html.ActionLink("Заказы", "Index", "Order")</li>
                <li>@Html.ActionLink("+", "CreateDetail", "AutoDetail")</li>
}
                </ul>
                 @Html.Partial("_LoginPartial")
            </div>
        </nav>
       
    </header>
    <div class="container">
        <div class="row">

        </div>
        @RenderBody()
    </div>

    @RenderSection("scripts", required: false)
</body>
</html>
