@model AutoStore.WEB.Models.UserViewModel

@{
    ViewBag.Title = "Account";
}

<div id="modDialog" class="modal fade">
    <div id="dialogContent" class="modal-dialog"></div>
</div>

<h2>Мой профиль</h2>
<div class="row">
    <div class="col-md-5">
        <table class="table">
            <tbody>
                <tr><td>Логин</td><td>@Model.UserName</td></tr>
                <tr><td>Имя</td><td>@Model.Name</td></tr>
                <tr><td>Email</td><td>@Model.Email</td></tr>
                <tr><td>Адрес проживания:</td><td>@Model.Address</td></tr>
            </tbody>
        </table>
        @Html.ActionLink("Редактировать", "EditUser")
    </div>
</div>

<div class="col-md-6">
    @{Html.RenderAction("_PartialUserOrders");}
</div>


@section scripts{
    <script>
    $(function () {
        $.ajaxSetup({ cache: false });
        $(".info").click(function (e) {

            e.preventDefault();
            $.get(this.href, function (data) {
                $('#dialogContent').html(data);
                $('#modDialog').modal('show');
            });
        });
    })
    </script>
}